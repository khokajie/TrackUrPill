<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:id="@+id/dialogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drug Safety Information"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="@color/text_dark_gray"
            android:layout_marginBottom="16dp" />

        <!-- Adverse Events List -->
        <LinearLayout
            android:id="@+id/eventsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Event items will be added here dynamically -->
        </LinearLayout>

        <!-- Understood Button -->
        <Button
            android:id="@+id/btnUnderstood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Understood"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/secondary_gray"
            android:textColor="@android:color/white" />
    </LinearLayout>

</ScrollView>

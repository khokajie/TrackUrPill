<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginTop="12dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Date and Time -->
        <TextView
            android:id="@+id/txtRecordDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: 28 Dec 2024 16:19"
            android:textColor="@color/primary_blue"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <!-- Weight -->
        <LinearLayout
            android:id="@+id/containerWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/labelWeight"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Weight:"
                android:textColor="@color/text_dark_gray"
                android:textSize="16sp" /> <!-- Increased from 14sp to 16sp -->

            <TextView
                android:id="@+id/txtWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="70.5 kg"
                android:textColor="@color/text_dark_gray"
                android:textSize="16sp" /> <!-- Increased from 14sp to 16sp -->
        </LinearLayout>

        <!-- Height -->
        <LinearLayout
            android:id="@+id/containerHeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/labelHeight"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Height:"
                android:textColor="@color/text_dark_gray"
                android:textSize="16sp" /> <!-- Increased from 14sp to 16sp -->

            <TextView
                android:id="@+id/txtHeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="175.0 cm"
                android:textColor="@color/text_dark_gray"
                android:textSize="16sp" /> <!-- Increased from 14sp to 16sp -->
        </LinearLayout>

        <!-- Blood Pressure -->
        <LinearLayout
            android:id="@+id/containerBloodPressure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/labelBloodPressure"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Blood Pressure:"
                android:textColor="@color/text_dark_gray"
                android:textSize="16sp" /> <!-- Increased from 14sp to 16sp -->

            <TextView
                android:id="@+id/txtBloodPressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120/80 mmHg"
                android:textColor="@color/text_dark_gray"
                android:textSize="16sp" /> <!-- Increased from 14sp to 16sp -->
        </LinearLayout>

        <!-- Heart Rate -->
        <LinearLayout
            android:id="@+id/containerHeartRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/labelHeartRate"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Heart Rate:"
                android:textColor="@color/text_dark_gray"
                android:textSize="16sp" /> <!-- Increased from 14sp to 16sp -->

            <TextView
                android:id="@+id/txtHeartRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="75 bpm"
                android:textColor="@color/text_dark_gray"
                android:textSize="16sp" /> <!-- Increased from 14sp to 16sp -->
        </LinearLayout>

        <!-- Blood Sugar Levels -->
        <LinearLayout
            android:id="@+id/containerBloodSugar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/labelBloodSugarLevels"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Blood Sugar:"
                android:textColor="@color/text_dark_gray"
                android:textSize="16sp" /> <!-- Increased from 14sp to 16sp -->

            <TextView
                android:id="@+id/txtBloodSugarLevels"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.6 mmol/L"
                android:textColor="@color/text_dark_gray"
                android:textSize="16sp" /> <!-- Increased from 14sp to 16sp -->
        </LinearLayout>

        <!-- Cholesterol Levels -->
        <LinearLayout
            android:id="@+id/containerCholesterol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/labelCholesterolLevels"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Cholesterol:"
                android:textColor="@color/text_dark_gray"
                android:textSize="16sp" /> <!-- Increased from 14sp to 16sp -->

            <TextView
                android:id="@+id/txtCholesterolLevels"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.2 mmol/L"
                android:textColor="@color/text_dark_gray"
                android:textSize="16sp" /> <!-- Increased from 14sp to 16sp -->
        </LinearLayout>

        <!-- BMI -->
        <LinearLayout
            android:id="@+id/containerBmi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/labelBmi"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="BMI:"
                android:textColor="@color/text_dark_gray"
                android:textSize="16sp" /> <!-- Increased from 14sp to 16sp -->

            <TextView
                android:id="@+id/txtBmi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22.9"
                android:textColor="@color/text_dark_gray"
                android:textSize="16sp" /> <!-- Increased from 14sp to 16sp -->
        </LinearLayout>

        <!-- Temperature -->
        <LinearLayout
            android:id="@+id/containerTemperature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/labelTemperature"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Temperature:"
                android:textColor="@color/text_dark_gray"
                android:textSize="16sp" /> <!-- Increased from 14sp to 16sp -->

            <TextView
                android:id="@+id/txtTemperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="36.6 Â°C"
                android:textColor="@color/text_dark_gray"
                android:textSize="16sp" /> <!-- Increased from 14sp to 16sp -->
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>

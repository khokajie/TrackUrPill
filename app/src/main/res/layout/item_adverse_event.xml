<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/eventItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@drawable/event_item_background"
    android:layout_marginBottom="8dp">

    <!-- Event Title and Icon -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Icon based on severity -->
        <ImageView
            android:id="@+id/imgSeverityIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="Severity Icon"
            android:src="@drawable/ic_warning"
            android:layout_marginEnd="8dp" />

        <!-- Event Title -->
        <TextView
            android:id="@+id/txtAdverseEvent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Adverse Event Name"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:textColor="@color/text_dark_gray"
            android:layout_weight="1" />
    </LinearLayout>

    <!-- Event Details -->
    <TextView
        android:id="@+id/txtEventDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Event details and recommendations."
        android:textAppearance="?attr/textAppearanceBody2"
        android:textColor="@color/text_light_gray"
        android:layout_marginTop="4dp" />
</LinearLayout>
